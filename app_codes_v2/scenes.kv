<LoginScreen>:
    title:title
    logname: logname
    password: password


    BoxLayout:
        orientation: 'vertical'
        Label:
            id:title
            text: "DMS"
            font_size: 32


        Label:
            text: "neter name and password"
            font_size: 16
            color: 1, 0.45, 0
        TextInput:
            id: logname
        TextInput:
            id: password

        Button:
            text: "login"
            font_size: 32
            size: 100,50
            on_press: root.login()


<MenuScreen>:
    label: label
    testlabel: testlabel
    gpslabel:gpslabel

    image:image
    inp :inp
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:gpslabel
            text: "gps loc"
            font_size: 32


        Label:
            id: label
            font_size: 32
            color: 1, 0.45, 0
        
        Image:
            id: image
            source: 'hi.jpg'
            allow_stretch: True
            

        Label :
            id: testlabel
            text: "-"
            font_size:64
        TextInput:
            id: inp
            
        Button:
            text: "start monitoring"
            font_size: 32
            size: 100,50
            on_press:root.start()
            

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: "home"
                font_size: 32
                size: 100,50
                on_press: root.manager.current = 'login'
            Button:
                text: "settings"
                font_size: 32
                size: 100,50
                on_press: root.manager.current = 'settings'
            Button:
                text: "status"
                font_size: 32
                size: 100,50

<SettingsScreen>:
    
    Button:
        text: "return"
        font_size: 32
        size: 100,50
        on_press: root.manager.current = 'menu'